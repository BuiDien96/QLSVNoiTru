@using QLSVNoiTru.Database;

@{
    ViewBag.Title = "Thông tin mẫu biểu";
    MauBieu mauBieu = (MauBieu)ViewData["mauBieu"];

}
<script src="~/Plugins/ckeditor/ckeditor.js"></script>
<script src="~/Plugins/ckfinder/ckfinder.js"></script>
<script src="~/Plugins/ckeditor/config.js"></script>
<script src="~/Plugins/ckeditor/styles.js"></script>
<script src="~/Plugins/ckeditor/sample.js"></script>

<script>
    $("#MAUBIEU").addClass("active");
</script>
<div class="body">
    <section class="content">
        <div class="header">
            <div class="col-md-12">
                <h4 class="header-title">Thông tin mẫu biểu</h4>
            </div>
        </div>
        <!-- CONTENT -->
        <div class="main-content">
            <form action="/MauBieu/CapNhat" method="post">
                <input type="hidden" name="MauBieuId" value="@mauBieu.MauBieuId" />
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Loại mẫu biểu</label>
                            <div>
                                <input type="text" readonly value="@mauBieu.LoaiMauBieu.TenLoaiMauBieu" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Tiêu đề</label>
                            <div>
                                <input type="text" name="TieuDe" value="@mauBieu.TieuDe" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Nội dung</label>
                            <div>
                                <textarea name="NoiDung" class="form-control" rows="3">@mauBieu.NoiDung</textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 text-center">
                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                    </div>
                </div>
            </form>
        </div>
        <!-- END: CONTENT -->
    </section>
</div>

<script>

    $(document).ready(function () {
        CKEDITOR.replace("NoiDung");
    });
</script>