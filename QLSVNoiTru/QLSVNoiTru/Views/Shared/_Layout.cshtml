    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title </title>
    <link rel="shortcut icon" href="/Plugins/img/logo.png" />
    <link href="/Plugins/scripts/css/css.css" rel="stylesheet" />
    <link href="/Plugins/scripts/vendor/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/Plugins/scripts/vendor/bootstrap-jasny/dist/extend/css/jasny-bootstrap.min.css" rel="stylesheet" />
    <link href="~/Plugins/scripts/css/font-awesome.min.css" rel="stylesheet" />
    <link href="/Plugins/scripts/vendor/bootstrap-daterangepicker/daterangepicker-bs3.css" rel="stylesheet" type="text/css" />
    <link href="/Plugins/scripts/vendor/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" type="text/css" />
    <link href="/Plugins/scripts/vendor/select2/select2.css" rel="stylesheet" type="text/css" />
    <link href="/Plugins/scripts/vendor/select2/select2-bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="/Plugins/scripts/vendor/jquery.uniform/themes/default/css/uniform.default.min.css" rel="stylesheet" type="text/css" />
    <link href="/Plugins/scripts/css/prettify.css" rel="stylesheet" type="text/css" />
    <link href="/Plugins/scripts/vendor/fullcalendar/fullcalendar.css" rel="stylesheet" />
