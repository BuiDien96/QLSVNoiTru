                            <li><a href="/SinhVien/SinhVienNopTienPhong"><i class="fa fa-circle-o"></i><span> Danh sách nộp tiền phòng </span></a></li>
                        </ul>
                    </li>
                }
                @if (quyen == QuyenDangNhap.BPDienNuoc)
