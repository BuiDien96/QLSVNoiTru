                        <span class="hidden-small">@(fullName)<b class="caret"></b></span>
                    </a>
                    <ul class="dropdown-menu pull-right">
                        <li>
                            <a href="/NguoiDung/Thongtintaikhoan">
                                <i class="fa fa-user"></i>
                                Thông tin tài khoản
                            </a>
                        </li>
                        <li>
                            <a href="/Login/DangXuat">
                                <i class="fa fa-sign-out"></i>
                                Đăng xuất
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
        <!-- END: HEAD NAV -->
