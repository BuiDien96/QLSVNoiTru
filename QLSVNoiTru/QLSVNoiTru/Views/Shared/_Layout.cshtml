                }
                @if (quyen == QuyenDangNhap.BPHeThong)
                {
                    <li id="QUANLYTAIKHOAN">
                        <a href="/NguoiDung/DanhSachTaiKhoan">
                            <i class="fa fa-users"></i> Người dùng
                        </a>
                    </li>
                }
                @if (quyen == QuyenDangNhap.BPQuanLy)
                {
                    <li id="QUANLY" class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-gear"></i> Quản lý <i class="caret"></i>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="/quanly/khoitaophongktxmoi">
                                    <i class="fa fa-circle-o"></i>
                                    <span> Xem tổng quát phòng </span>
                                </a>
                            </li>
                            <li>
                                <a href="/kytucxa/ManHinhKyTucXa">
                                    <i class="fa fa-circle-o"></i>
                                    <span> Ký túc xá </span>
                                </a>
                            </li>
                            <li>
