                @if (quyen == QuyenDangNhap.BPHeThong)
                {
                    <li id="MAUBIEU">
                        <a href="/MauBieu/DanhSachMauBieu">
                            <i class="fa fa-file"></i> Mẫu biểu
                        </a>
