    <!-- JS -->
    <script src="/Plugins/scripts/vendor/jquery-ui/js/jquery-ui.min.js"></script>
    <script src="/Plugins/scripts/vendor/jquery.uniform/jquery.uniform.min.js"></script>
    <script src="/Plugins/scripts/vendor/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/Plugins/scripts/vendor/bootstrap-jasny/dist/extend/js/jasny-bootstrap.min.js"></script>
    <script src="/Plugins/scripts/vendor/jquery-autosize/jquery.autosize.min.js"></script>
    <script src="/Plugins/scripts/vendor/moment/min/moment.min.js"></script>
    <script src="/Plugins/scripts/vendor/bootstrap-daterangepicker/daterangepicker.js"></script>
    <script src="/Plugins/scripts/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
