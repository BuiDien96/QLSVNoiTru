                            <li><a href="/SinhVien/DangKyThem"><i class="fa fa-circle-o"></i><span> Đăng ký thêm nội trú </span></a></li>
                            @*<li><a href="/SinhVien/DangKyNoiTruNhanh"><i class="fa fa-circle-o"></i><span> Đăng ký nhanh cho sv ở lại </span></a></li>*@

                        </ul>
                    </li>
                }
                @if (quyen == QuyenDangNhap.BPQuanLy)
                {
                    <li id="PHONG" class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-home"></i> Phòng <i class="caret"></i>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/Phong/DanhSachPhong"><i class="fa fa-circle-o"></i><span> Danh sách phòng </span></a></li>
                            <li><a href="/Phong/PhongTrangThietBi"><i class="fa fa-circle-o"></i><span> Trang thiết bị phòng </span></a></li>
                            <li><a href="/loaiphong/DanhSachLoaiPhong"><i class="fa fa-circle-o"></i><span> Danh sách loại phòng </span></a></li>
                            <li><a href="/TrangThietBi/DanhSachThietBi"><i class="fa fa-circle-o"></i><span> Danh sách thiết bị </span></a></li>
                        </ul>
                    </li>
                }
                @if (quyen == QuyenDangNhap.BPQuanLy)
                {
                    <li id="SINHVIEN" class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-user"></i> Sinh viên <i class="caret"></i>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/SinhVien/DanhSachSinhVien"><i class="fa fa-circle-o"></i><span> Danh sách sinh viên </span></a></li>
                            @*<li><a href="#"><i class="fa fa-circle-o"></i><span> Hoạt động nội trú </span></a></li>*@
