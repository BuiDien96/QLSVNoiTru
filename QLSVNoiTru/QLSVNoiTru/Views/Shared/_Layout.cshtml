    <link href="/Plugins/scripts/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="/Plugins/scripts/css/ark.css" rel="stylesheet" type="text/css" />
    <link href="/Plugins/scripts/css/examples.css" rel="stylesheet" type="text/css" />
    <script src="/Plugins/scripts/vendor/jquery/dist/jquery.min.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" />
