<body class="cover">
    <div class="wrapper">
        <!-- HEAD NAV -->
        <div class="navbar navbar-default navbar-static-top navbar-main" role="navigation">
            <div class="navbar-header">
                <a class="navbar-brand" href="index.html">
                    Quản lý sinh viên nội trú
                </a>
            </div>
            <ul class="nav navbar-nav navbar-right">
                <li class="visible-xs">
