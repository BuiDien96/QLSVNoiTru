@using QLSVNoiTru.Database;
@using QLSVNoiTru.Models;
@{
    ViewBag.Title = "Tiêu thụ điện nước";
    List<HoaDonDienNuoc> hoaDonDienNuocs = (List<HoaDonDienNuoc>)ViewData["hoaDonDienNuocs"];
    Phong phong = (Phong)ViewData["phong"];
}
<script>
    $("#PHONG").addClass("active");
</script>
<div class="body">
    <section class="content">
        <div class="header">
            <div class="col-md-12">
                <h4 class="header-title">Thông tin tiêu thụ điện nước</h4>
            </div>
        </div>
        <!-- CONTENT -->
        <div class="main-content">
            <div class="row">
                <div class="col-md-12">
                    <h3>Phòng: <b>@phong.SoHieuPhong</b></h3>
                </div>
                <div class="col-md-12">
                    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-hover datatable">
                        <thead>
                            <tr>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th colspan="2" class="text-center">Tiền điện</th>
                                <th colspan="2" class="text-center">Tiền nước</th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                            <tr>
                                <th>Mã hóa đơn</th>
                                <th>Số hiệu phòng</th>
                                <th>Người nộp tiền</th>
                                <th>Chi số đầu</th>
                                <th>Chỉ số cuối</th>
                                <th>Chi số đầu</th>
                                <th>Chỉ số cuối</th>
                                <th>Tổng tiền</th>
                                <th>Tháng ghi</th>
                                <th>Ngày cập nhật</th>
                                <th>Trạng thái</th>
                                <th style="width: 150px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in hoaDonDienNuocs)
                            {
                                <tr>
                                    <td>@item.HoaDonDienNuocId</td>
                                    <td>@item.SoHieuPhong</td>
                                    <td>@item.NguoiNopTien</td>
                                    <td>@item.Chisodiendau</td>
                                    <td>@item.Chisodiencuoi</td>
                                    <td>@item.Chisonuocdau</td>
                                    <td>@item.Chisonuoccuoi</td>
                                    <td>@item.TongTien</td>
                                    <td>@item.ThangGhi.ToString("dd/MM/yyyy")</td>
                                    <td>@(item.NgayLap == null ? "" : item.NgayLap.Value.ToString("dd/MM/yyyy HH:mm"))</td>
                                    <td>
                                        @(item.TrangThai == 0 ? "Chưa thanh toán" : "Đã thanh toán")
                                    </td>
                                    <td class="text-center">
                                        <a target="_blank" href="/MauBieu/InHoaDonDienNuoc?hoadondiennuocId=@item.HoaDonDienNuocId" class="btn btn-primary btn-sm">In hóa đơn</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- END: CONTENT -->
    </section>
</div>